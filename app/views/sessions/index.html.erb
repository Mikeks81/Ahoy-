
<div id="landing_page_container">
	<div id="sign_up_form">
		<h1>Sign Up</h1>
		<%= form_for @user do |t| %>
			<p><%= t.label :email %></p>
			<p><%= t.email_field :email %></p>
			<p><%= t.label :password %></p>
			<p><%= t.password_field :password %></p>
			<p><%= t.label :password_confirmation %></p>
			<p><%= t.password_field :password_confirmation %></p>
			<p><%= t.submit "Sign Up" %></p>
		<% end %>
	</div>

	<div id="sign_in_form">
		<h1>Log In</h1>
		<%= form_tag sessions_path do %>
			<p><%= label_tag :email %></p>
			<p><%= email_field_tag :email %></p>
			<p><%= label_tag :password %></p>
			<p><%= password_field_tag :password %></p>
			<p><%= submit_tag "Sign In" %></p>
		<% end %>
	</div>
</div>